                    <input type="text" name="nombreUs" id="inputNombre" required>
                    <input type="text" name="primerApellidoUs" id="inputPrimerApellido" required>
                    <input type="text" name="segundoApellidoUs" id="inputSegundoApellido" required>
                    <input type="text" name="celularUs" id="inputCelular" required>
                    <input type="text" name="contraseñaUS" id="inputContrasenna" required>
                    <input type="text" name="RolUS" id="inputRol" required>
                </div>
            </section>
            <section id="botones">
                <div id="boton" class="col-4">
                    <input type="button" onclick="crearUsuario()" value="Crear" id="botonCrear"/>
                    <input type="button" onclick="actualizarUsuario()" value="Modificar" id="botonModificar"/>
                    <input type="button" onclick="eliminarUsuario(id_us)" value="Eliminar" id="botonEliminar"/>
